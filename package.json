    "dependencies": {
        "@emotion/react": "^11.10.6",
        "@hookform/resolvers": "^2.9.11",
        "@mui/material": "^5.11.13",
        "@types/react": "^18.0.28",
        "color": "^4.2.3",
        "dayjs": "^1.11.7",
        "firebase": "^9.17.2",
        "prettier": "^2.8.4",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-hook-form": "^7.43.5",
